<?xml version="1.0" encoding="UTF-8"?>
<context>

    <movement name="Up" value="U" />
    <movement name="Down" value="D" />
    <movement name="Left" value="L" />
    <movement name="Right" value="R" />

    <movement name="UpLeft" value="UL" />
    <movement name="UpRight" value="UR" />

    <movement name="DownLeft" value="DL" />
    <movement name="DownRight" value="DR" /> <!-- conflicts with "L". will never be reached. -->

    <movement name="LeftUp" value="LU" />
    <movement name="LeftDown" value="LD" />

    <movement name="RightDown" value="RD" />
    <movement name="RightUp" value="RU" />


    <movement name="A" value="URD" >
    <movement name="B" value="(U?RDLRDLU)|(URDLRDLU?)" />
    <movement name="C" value="U?LDRU?" />
    <movement name="D" value="DRUL" />
    <movement name="E" value="RULDRU?" />
    <movement name="F" value="(LD(UR|RLD)|RUL?DU(R|RU)?)" />
    <movement name="G" value="LDRU(LRD?|DL(U|UR))" />
    <movement name="H" value="DURUD" />
    <movement name="I" value="RL?DL?R" />
    <movement name="J" value="R?L?DRDLU" />
    <movement name="M" value="D?UR?DUR?D" />
    <movement name="N" value="UDU" />
    <movement name="O" value="(LDRUL)+"/>
    <movement name="P" value="RULD" />
    <movement name="Q" value="ULDRUD" />
    <movement name="R" value="((RDL?)|DL?|L)?URDLR?(D|DRD?R?)?" />
    <movement name="S" value="U?LDRDLU?" />
    <movement name="T" value="RLD" />
    <movement name="U" value="DRU" />
    <movement name="W" value="DR?UDR?U" />
    <movement name="X" value="DLURU?" />
    <movement name="Y" value="DRUDLUR?" />
    <movement name="Z" value="U?R(D?LD?)+RU?" />


    <context windowclass=".*(Term|term).*">
        <gesture movement="T" command="xdotool key Ctrl+Shift+t"/>
        <gesture movement="N" command="xdotool key Ctrl+Shift+n"/>
        <gesture movement="C" command="xdotool key Ctrl+Shift+c">
        <gesture movement="RightDown" command="xdotool key Ctrl+Shift+w"/>
    </context>


    <context windowclass="Google-chrome">
        <gesture movement="RightDown" command="Ctrl+F4" />
    </context>


    <!-- Window Ctrl -->

    <gesture movement="Up" command="xdotool -ir :ACTIVE: -b add,maximized_vert,maximized_horz"/>
    <gesture movement="Down" command="xdotool getwindowfocus windowminimize" />
    <gesture movement="DownRight" command="xdotool getwindowfocus windowclose"/>
    
    <!-- Generic actions -->

    <gesture movement="Left" command="xdotool Alt+Left" />
    <gesture movement="Right" command="xdotool Alt+Right" />
    <gesture movement="T" command="Ctrl+T" />
    <gesture movement="RightDown" command="Ctrl+W" />

    <gesture movement="C" command="xdotool Ctrl+C" />
    <gesture movement="DRU" command="Ctrl+V" />
    <gesture movement="N" command="Ctrl+N" />
    <gesture movement="O" command="Ctrl+O" />
    <gesture movement="P" command="Ctrl+P" />
    <gesture movement="S" command="Ctrl+S" />
    <gesture movement="E" command="Escape" />

    <gesture movement="G" command="xdotool type google.com; xdotool key Return" />

    <!-- Custom actions -->

    <gesture movement="W" command="x-www-browser" />
    <gesture movement="G" comman="gedit" />
    <gesture movement="UpLeftDown" command="Ctrl+Shift_L+Tab" />
    <gesture movement="UpRightDown" command="Ctrl+Tab" />
    
</context>
